#!/usr/bin/env bash

echo 'Ready to install doom emacs'
read -p "Make sure internet is working, then press enter" < /dev/tty

killall emacs
rm  "$HOME/.emacs"
rm -rf "$HOME/.emacs.d"

git clone --depth 1 https://github.com/doomemacs/doomemacs ~/.config/emacs
~/.config/emacs/bin/doom install

emacs --daemon
